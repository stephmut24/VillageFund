{
  "name": "villagefund",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/stephmut24/VillageFund.git"
  },
  "keywords": [
    "Node.js",
    "Express.js",
    "Typescript",
    "PostgreSql",
    "Sequelize"
